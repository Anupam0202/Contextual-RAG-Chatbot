# GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Model Configuration
RAG_MODEL_NAME=gemini-1.5-flash
RAG_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
RAG_TEMPERATURE=0.7
RAG_MAX_OUTPUT_TOKENS=2048
RAG_TOP_K=10
RAG_TOP_P=0.95

# Conversation Configuration
RAG_CONTEXT_WINDOW=5
RAG_MAX_CONTEXT_LENGTH=4000
RAG_PRESERVE_CONTEXT_BETWEEN_SESSIONS=false
RAG_CONVERSATION_MEMORY_TTL=3600

# Vector Store Configuration
RAG_VECTOR_STORE_TYPE=in_memory
RAG_INDEX_NAME=rag_documents
RAG_VECTOR_DIMENSION=384
RAG_BATCH_SIZE=100

# Retrieval Configuration
RAG_RETRIEVAL_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
RAG_HYBRID_SEARCH_ALPHA=0.5
RAG_RERANK_ENABLED=true

# Chunking Configuration
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_SEMANTIC_CHUNKING=true
RAG_PRESERVE_HEADERS=true

# Performance Configuration
RAG_ENABLE_CACHING=true
RAG_CACHE_TTL=3600
RAG_ASYNC_PROCESSING=true
RAG_MAX_WORKERS=4

# Analytics Configuration
RAG_ENABLE_ANALYTICS=true
RAG_ANALYTICS_CACHE_TTL=300
RAG_TRACK_QUERY_HISTORY=true
RAG_GENERATE_INSIGHTS=true

# Security Configuration
RAG_SESSION_TIMEOUT=7200
RAG_MAX_FILE_SIZE=52428800